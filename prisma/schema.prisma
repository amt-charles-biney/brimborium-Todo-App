// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  tasks    Task[]
}

model Task {
  id          String   @id @default(uuid())
  topic       String
  description String
  dueDate     DateTime
  createdDate DateTime @default(now())
  status      Status   @default(TO_DO)
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@unique([topic, description, dueDate])
}

enum Status {
  TO_DO
  IN_PROGRESS
  COMPLETED
  MISSED
}
